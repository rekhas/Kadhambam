<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tamil.kadhambam"
    android:installLocation="preferExternal"
    android:versionCode="12"
    android:versionName="1.8" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:debuggable="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black" >
        <activity
            android:name="com.tamil.kadhambam.DifficultyLevelSelection"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.tamil.kadhambam.arangam"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.tamil.kadhambam.EndGameActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.tamil.kadhambam.SplashScreenActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>